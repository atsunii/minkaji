<div class="items-sell-contents">
  <header class="items-sell-header">

  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">家事の内容を入力</h2>
    <%= form_with model: @house_works,local: true do |f| %>

    <%# 日付 %>
    <div class="form-group">
    <div class='form-text-wrap'>
      <div class="weight-bold-text">日付</div>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :date,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: (Time.now.year),
                    end_year: (Time.now.year + 2),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>

    <%# 掃除 %>
    <div class="items-detail">
      <div class="weight-bold-text">掃除した場所</div>
      <div class="form">
        <div class="weight-bold-text">
          各種2ポイント
        </div>
        <%= f.collection_select(:clean_id, Clean.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
      </div>
    </div>

    <%# タオル %>
    <div class="items-detail">
      <div class="weight-bold-text">タオル交換した場所</div>
      <div class="form">
        <div class="weight-bold-text">
          各種1ポイント
        </div>
        <%= f.collection_select(:towel_id, Towel.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
      </div>
    </div>

    <%# ゴミ出し %>
    <div class="items-detail">
      <div class="weight-bold-text">ゴミ出しした種類</div>
      <div class="form">
        <div class="weight-bold-text">
          各種2ポイント
        </div>
        <%= f.collection_select(:garbage_id, Garbage.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
      </div>
    </div>

    <%# 得点 %>
    <div class="items-detail">
      <div class="weight-bold-text">獲得ポイントは？</div>
      <div class="form">
        <div class="weight-bold-text">
          家事ポイントの合計を入力しよう
        </div>
        <%= f.collection_select(:score_id, Score.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
      </div>
    </div>

    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "更新" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>

  </div>
  <% end %>

</div>